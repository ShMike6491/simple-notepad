<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/cultured"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_gap_extra_small"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_gap_extra_small">

    <androidx.appcompat.widget.AppCompatEditText
        android:background="@null"
        android:gravity="start"
        android:id="@+id/pageInputEditText"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:lines="25"
        android:maxLines="25"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/pageFooterTextView"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_gap_extra_small"
        android:layout_width="match_parent"
        android:textAlignment="center"
        tools:text="1 of 5" />

</LinearLayout>